---
import MarkdownLayout from '../layouts/MarkdownLayout.astro';
import { getEntry } from 'astro:content';

const aboutContent = await getEntry('about', 'about');
const { Content } = await aboutContent.render();
---

<MarkdownLayout frontmatter={aboutContent.data}>
    <Content />
</MarkdownLayout>

<style lang="scss">
    @use 'sass:map';
    @use '../styles/_partials/_variables' as *;

    .about-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: map.get($spacing, s);
    }

    @media (max-width: 768px) {
        .about-container {
            padding: map.get($spacing, xs);
        }
    }
</style> 
