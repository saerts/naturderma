---
import Layout from '../layouts/Layout.astro';
---

<Layout 
    title="Contact | Naturderma" 
    description="Neem contact met ons op voor vragen over onze hypoallergene sieraden"
>
    <main class="contact-container" transition:animate="fade">
        <h1 class="animate-in">Contact</h1>
        
        <div class="contact-info animate-in" style="animation-delay: 0.2s">
            <p class="contact-intro">
                Voor vragen of informatie over onze producten of distributie, neem gerust contact met ons op via e-mail:
                <a href="mailto:contacto@naturderma.com" class="email-link">contacto@naturderma.com</a>
            </p>
        </div>

        <div class="contact-form-container animate-in" style="animation-delay: 0.4s">
            <h2>Stuur ons een bericht</h2>
            <form class="contact-form" action="#" method="POST">
                <div class="form-group">
                    <label for="name">Naam</label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        required 
                        placeholder="Uw naam"
                    />
                </div>

                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        required 
                        placeholder="uw@email.com"
                    />
                </div>

                <div class="form-group">
                    <label for="subject">Onderwerp</label>
                    <input 
                        type="text" 
                        id="subject" 
                        name="subject" 
                        required 
                        placeholder="Onderwerp van uw bericht"
                    />
                </div>

                <div class="form-group">
                    <label for="message">Bericht</label>
                    <textarea 
                        id="message" 
                        name="message" 
                        required 
                        placeholder="Uw bericht..."
                        rows="5"
                    ></textarea>
                </div>

                <button type="submit" class="submit-button">
                    Verstuur Bericht
                </button>
            </form>
        </div>
    </main>
</Layout>

<style lang="scss">
    @use 'sass:map';
    @use '../styles/_partials/_design-system' as *;

    .contact-container {
        max-width: 800px;
        margin: 0 auto;
        padding: map.get($spacing, 8);

    }

    .contact-info {
        margin-bottom: map.get($spacing, 12);
        text-align: center;
    }

    .contact-intro {
        font-size: map.get($font-sizes, lg);
        color: var(--text-secondary);
        line-height: 1.6;
    }

    .email-link {
        display: inline-block;
        color: var(--bg-secondary);
        text-decoration: none;
        font-weight: map.get($font-weights, medium);
        margin-top: map.get($spacing, 2);
        transition: color 0.3s ease;

        &:hover {
            color: var(--text-primary);
        }
    }

    .contact-form-container {
        background: var(--card-bg);
        border: 1px solid var(--border-primary);
        border-radius: map.get($spacing, 2);
        padding: map.get($spacing, 8);

        h2 {
            font-size: map.get($font-sizes, xl);
            color: var(--text-primary);
            margin-bottom: map.get($spacing, 6);
            text-align: center;
        }
    }

    .contact-form {
        display: grid;
        gap: map.get($spacing, 6);

        .form-group {
            display: grid;
            gap: map.get($spacing, 2);

            label {
                font-size: map.get($font-sizes, base);
                color: var(--text-primary);
                font-weight: map.get($font-weights, medium);
            }

            input, textarea {
                width: 100%;
                padding: map.get($spacing, 3);
                border: 1px solid var(--border-primary);
                border-radius: map.get($spacing, 1);
                background: var(--bg-main);
                color: var(--text-primary);
                font-size: map.get($font-sizes, base);
                transition: border-color 0.3s ease;

                &::placeholder {
                    color: var(--text-tertiary);
                }

                &:focus {
                    outline: none;
                    border-color: var(--bg-secondary);
                }
            }

            textarea {
                resize: vertical;
                min-height: 120px;
            }
        }
    }

    .submit-button {
        background: var(--bg-secondary);
        color: white;
        border: none;
        padding: map.get($spacing, 4) map.get($spacing, 6);
        border-radius: map.get($spacing, 1);
        font-size: map.get($font-sizes, base);
        font-weight: map.get($font-weights, medium);
        cursor: pointer;
        transition: background-color 0.3s ease;
        justify-self: center;
        min-width: 200px;

        &:hover {
            background: var(--bg-primary);
        }
    }

    @media (max-width: map.get($breakpoints, md)) {
        .contact-container {
            padding: map.get($spacing, 4);

            h1 {
                font-size: map.get($font-sizes, 2xl);
            }
        }

        .contact-form-container {
            padding: map.get($spacing, 4);
        }

        .contact-intro {
            font-size: map.get($font-sizes, base);
        }

        .submit-button {
            width: 100%;
        }
    }
</style> 
