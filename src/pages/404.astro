---
import Layout from '../layouts/Layout.astro';
---

<Layout 
    title="404 | Pagina niet gevonden | Naturderma" 
    description="De pagina die je zoekt bestaat niet."
>
    <main class="error-container">
        <div class="stars"></div>
        <div class="central-body">
            <div class="error-content">
                <h1>4<span class="planet">0</span>4</h1>
                <p>Oeps! Deze pagina is verdwenen in het universum</p>
                <a href="/" class="btn-go-home">Terug naar Home</a>
            </div>
            <div class="astronaut">
                <div class="astronaut-backpack"></div>
                <div class="astronaut-head"></div>
                <div class="astronaut-body"></div>
                <div class="astronaut-leg left"></div>
                <div class="astronaut-leg right"></div>
                <div class="astronaut-arm left"></div>
                <div class="astronaut-arm right"></div>
            </div>
        </div>
    </main>
</Layout>

<style lang="scss">
    @use 'sass:map';
    @use '../styles/_partials/_design-system' as *;

    .error-container {
        min-height: 100vh;
        background: linear-gradient(
            to bottom,
            map.get($colors, neutral, 900),
            map.get($colors, neutral, 800)
        );
        position: relative;
        overflow: hidden;
    }

    .stars {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        animation: twinkle 2s infinite;
        
        &::before,
        &::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                radial-gradient(2px 2px at 20px 30px, map.get($colors, neutral, 100), rgba(0,0,0,0)),
                radial-gradient(2px 2px at 40px 70px, map.get($colors, neutral, 100), rgba(0,0,0,0)),
                radial-gradient(2px 2px at 50px 160px, map.get($colors, neutral, 100), rgba(0,0,0,0)),
                radial-gradient(2px 2px at 90px 40px, map.get($colors, neutral, 100), rgba(0,0,0,0)),
                radial-gradient(2px 2px at 130px 80px, map.get($colors, neutral, 100), rgba(0,0,0,0));
            background-repeat: repeat;
            background-size: 200px 200px;
            opacity: 0;
            animation: twinkle 2s infinite;
        }

        &::after {
            background-position: 100px 100px;
            animation-delay: 1s;
        }
    }

    .central-body {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        padding: map.get($spacing, 8);
    }

    .error-content {
        color: map.get($colors, neutral, 100);
        
        h1 {
            font-size: map.get($font-sizes, 4xl);
            margin: 0;
            font-weight: map.get($font-weights, bold);
            text-shadow: 0 0 20px rgba(255,255,255,0.3);

            .planet {
                display: inline-block;
                animation: rotate 4s linear infinite;
                background: linear-gradient(
                    45deg,
                    map.get($colors, primary, base),
                    map.get($colors, secondary, base)
                );
                border-radius: 50%;
                box-shadow: 0 0 50px map.get($colors, secondary, base);
            }
        }

        p {
            font-size: map.get($font-sizes, xl);
            margin: map.get($spacing, 4) 0;
            color: map.get($colors, neutral, 400);
        }
    }

    .btn-go-home {
        display: inline-block;
        padding: map.get($spacing, 4) map.get($spacing, 8);
        background: map.get($colors, primary, base);
        color: map.get($colors, neutral, 100);
        text-decoration: none;
        border-radius: map.get($spacing, 8);
        font-weight: map.get($font-weights, medium);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        
        &:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px map.get($colors, primary, dark);
            background: map.get($colors, primary, light);
        }
    }

    .astronaut {
        position: absolute;
        width: 250px;
        height: 300px;
        background: map.get($colors, secondary, base);
        border-radius: map.get($spacing, 8);
        top: -100px;
        right: -100px;
        animation: float 6s ease-in-out infinite;
        pointer-events: none;
        opacity: 0.5;
        
        &::before {
            content: '';
            position: absolute;
            background: map.get($colors, primary, base);
            width: 100px;
            height: 100px;
            border-radius: 50%;
            top: 50px;
            left: 75px;
        }
    }

    @keyframes twinkle {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.3; }
    }

    @keyframes rotate {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    @keyframes float {
        0%, 100% { transform: translateY(0) rotate(5deg); }
        50% { transform: translateY(-20px) rotate(-5deg); }
    }

    @media (max-width: map.get($breakpoints, md)) {
        .error-content {
            h1 {
                font-size: map.get($font-sizes, 3xl);
            }

            p {
                font-size: map.get($font-sizes, lg);
                padding: 0 map.get($spacing, 4);
            }
        }

        .astronaut {
            display: none;
        }
    }
</style> 