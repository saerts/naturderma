---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from 'astro:transitions';
import SpeedInsights from '@vercel/speed-insights/astro';
import "../styles/main.scss";

interface Props {
    title: string;
    description?: string;
    image?: string;
}

const {title, description = "Spaans hypoallergeen sieradenmerk", image = "assets/naturderma-logo.png"} = Astro.props
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="description" content={description}/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <meta property="og:image" content={image}/>
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <ViewTransitions fallback="animate" />
</head>
<body>
    <div class="frame">
        <Header transition:persist />
        <main>
            <slot />
        </main>
        <Footer transition:persist />
    </div>
    <SpeedInsights />
</body>
</html>

<style lang="scss">
    @use 'sass:map';
    @use '../styles/_partials/_variables' as *;
    .frame {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    main {
        flex: 1;
        background: var(--Surface-main);
    }
</style>

<script>
    // Add animation classes to new content after navigation
    document.addEventListener('astro:page-load', () => {
        const animateElements = document.querySelectorAll('.animate-in');
        animateElements.forEach((element, index) => {
            element.style.animationDelay = `${index * 0.2}s`;
        });
    });

    // Set initial theme before page loads
    const savedTheme = localStorage.getItem('theme') || 'light';
    document.documentElement.setAttribute('data-theme', savedTheme);
</script>
