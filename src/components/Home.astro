---
const imagePath1 = "/images/1_Naturderma.jpg";
const imagePath2 = "/images/2_Naturderma.jpg";
const imagePath3 = "/images/3_Naturderma.jpg";
const imagePath4 = "/images/4_Naturderma.jpg";
---

<main id="main" transition:animate="fade">
    <section class="hero animate-in">
        <h1>Naturderma</h1>
        <p>Spanish hypoallergenic jewelry brand</p>
    </section>

    <section class="featured stagger-in">
        <img src={imagePath1} alt="Geen allergieÃ«n meer" />
        <img src={imagePath2} alt="Exclusief in apotheken" />
        <img src={imagePath3} alt="Unieke modellen" />
        <img src={imagePath4} alt="5, 10, 15 of 20 Euros" />
    </section>
</main>

<style lang="scss">
    @use 'sass:map';
    @use '../styles/_partials/_design-system' as *;
    
    #frame {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: map.get($spacing, 8);
    }

    .hero {
        text-align: center;
        padding: map.get($spacing, 16) 0;
    }



    p {
        font-size: map.get($font-sizes, xl);
        color: var(--text-secondary);
    }

    .featured {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: map.get($spacing, 8);
        
        img {
            width: 100%;
            max-width: 600px;
            height: auto;
            display: block;
            margin: 0 auto;
        }
    }

    /* Add view transition styles */
    ::view-transition-old(root),
    ::view-transition-new(root) {
        animation: none;
        mix-blend-mode: normal;
    }

    /* Customize the view transition animation */
    ::view-transition-old(root) {
        animation: fadeOut 0.5s ease-out forwards;
    }

    ::view-transition-new(root) {
        animation: fadeIn 0.5s ease-out forwards;
    }

    @keyframes fadeOut {
        from { opacity: 1; }
        to { opacity: 0; }
    }
</style>
